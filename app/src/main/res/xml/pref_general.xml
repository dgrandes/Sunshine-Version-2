<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="city_name_list"
        android:title="Choose a City"
        android:defaultValue="0"
        android:entries="@array/pref_city_name_list_titles"
        android:entryValues="@array/pref_city_name_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="measurement_system"
        android:title="Measurement System"
        android:defaultValue="metric"
        android:entries="@array/pref_measurement_titles"
        android:entryValues="@array/pref_measurement_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        />

    <ListPreference
        android:key="days"
        android:title="Days"
        android:defaultValue="7"
        android:entries="@array/pref_days_titles"
        android:entryValues="@array/pref_days_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        />
</PreferenceScreen>
